<% provide(:title, t("all_reports")) %>
<div id="content">
  <%= render "layouts/toggle_sidebar" %>
  <div class="form-group">
    <p>
      <div class="row">
        <div class="form-inline">
          <%= form_tag(reports_path, :method => "get", id: "search-form", :html => {class: "form"}) do %>
          <div class="form-group">
            <%= text_field_tag :q, params[:q], class: "form-control" %>
          </div>
          <%= submit_tag "Search", class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </p>
  </div>
  <% if @reports.present? %>
  <%= render @reports %>
  <% else %>
  <%= t("nothing") %>
  <% end %>
</div>
