<div id="content">
  <%= render 'layouts/toggle_sidebar' %>
  <h1 class="my-4 text-center">Request For Leave Of Absense</h1>
  <div class="card text-center">
    <div class="card-header">Employment Detail</div>
    <div class="card-body">
      <form >
        <div class="form-inline">
          <label for="name" style="margin-right: 20px;">Employment Name:</label>
          <input type="name" class="form-control" value="<%= current_user.name%>" readonly>
        </div>
        <div class="form-inline" style="padding-top: 30px;">
          <label for="name" style="margin-right: 113px;">Division:</label>
          <input type="name" class="form-control" value="<%= current_user.name%>" readonly>
        </div>
        <div class="form-inline" style="padding-top: 30px;">
          <label for="name" style="margin-right: 113px;"">Position:</label>
          <input type="name" class="form-control" value="<%= current_user.name%>" readonly>
        </div>
      </form>
    </div>
  </div>
  <div class="card ">
    <div class="card-header text-center">Skill Type</div>
    <div class="card-body">
      <%= form_for @user_skill do |f| %>
        <div class="field">
          <%= f.label "Please choice skill" %><br />
            <%= f.collection_check_boxes :skill_id, Skill.all, :id, :name do |b| %>
            <div class="collection-check-box">
              <%= b.check_box %>
              <%= b.label %>
            </div>
          <% end %>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
